<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detalle_film"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taha.filmproject.DetalleFilmActivityFragment"
    tools:showIn="@layout/activity_detalle_film">

    <ImageView
        android:id="@+id/ivPosterImage"
        android:layout_width="182dp"
        android:layout_height="152dp"
        android:adjustViewBounds="true"
        android:maxHeight="160dp"
        android:scaleType="fitXY"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
        app:layout_constraintRight_toLeftOf="@+id/guideline" />


    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="347dp"
        android:layout_height="44dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:text="Name"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvoverview"
        android:layout_width="342dp"
        android:layout_height="127dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.06"
        android:text="DescripciÃ³n" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="455dp"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="202dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="202dp" />

    <android.support.constraint.Guideline
        android:layout_width="384dp"
        android:layout_height="0dp"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="227dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="227dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:text="TextView"
        android:layout_width="154dp"
        android:layout_height="22dp"
        android:id="@+id/textView"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/ivPosterImage"
        app:layout_constraintLeft_toLeftOf="@+id/textView2" />

    <TextView
        android:text="TextView"
        android:layout_width="146dp"
        android:layout_height="22dp"
        android:id="@+id/textView2"
        tools:layout_editor_absoluteY="106dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.33" />

    <TextView
        android:text="TextView"
        android:layout_width="146dp"
        android:layout_height="22dp"
        android:id="@+id/textView3"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.33"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/ivPosterImage"
        android:layout_marginLeft="8dp" />

    <TextView
        android:text="TextView"
        android:layout_width="338dp"
        android:layout_height="27dp"
        android:id="@+id/tvTituloOriginal"
        tools:layout_editor_absoluteX="23dp"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="TextView"
        android:layout_width="341dp"
        android:layout_height="23dp"
        tools:layout_editor_absoluteY="276dp"
        android:id="@+id/textView5"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>
